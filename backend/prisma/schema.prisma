// Prisma schema for G-Scores database

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id           Int       @id @default(autoincrement())
  sbd          String    @unique
  fullName     String?   @map("full_name")
  toan         Float?
  vat_li       Float?    @map("vat_li")
  hoa_hoc      Float?    @map("hoa_hoc")
  sinh_hoc     Float?    @map("sinh_hoc")
  ngu_van      Float?    @map("ngu_van")
  ngoai_ngu    Float?    @map("ngoai_ngu")
  ma_ngoai_ngu String?   @map("ma_ngoai_ngu")
  lich_su      Float?    @map("lich_su")
  dia_li       Float?    @map("dia_li")
  gdcd         Float?
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  @@map("students")
}

model StatisticsSummary {
  id        Int      @id @default(autoincrement())
  subject   String
  level     String
  count     Int
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([subject, level])
  @@index([subject])
  @@map("statistics_summary")
}

model ScoreRangeSummary {
  id         Int      @id @default(autoincrement())
  subject    String
  scoreRange Int      @map("score_range")
  count      Int
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@unique([subject, scoreRange])
  @@index([subject])
  @@map("score_range_summary")
}

model CountStudent {
  id              Int      @id @default(autoincrement())
  totalStudents   Int      @map("total_students")
  invalidStudents Int      @map("invalid_students")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("count_student")
}
  